<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>


    <% @articles.each do |article| %>
     
        <h4><%= article.title %></h4>
        <p><%= article.body %></p>
        <%= link_to 'Show', article %>

      
    <% end %><br><br>

<% if can? :update, @article %>
    <%= link_to 'New Article', new_article_path %>
<% end %>
