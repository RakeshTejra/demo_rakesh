<p>
  <strong>Title:</strong>
  <b><%= @article.title %></b>
</p>

<p>
  <%= image_tag(@article.photo.url, :width => 300, :height => 175, class: "img-rounded img-responsive") %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <% if can? :update, @article %>
    <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-info btn-ms' %> 
  <% end %>
  <% if can? :destroy, @article %>
    <%= link_to "Destroy", @article, :method => :delete, :confirm => "Are you sure?", class: 'btn btn-danger btn-ms' %> 
  <% end %>
  <%= link_to "Back", articles_path, class: 'btn btn-default' %>
</p>
